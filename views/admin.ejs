<% include header %>
<h1>Admin</h1>
<div class="row">
    <div class="col-lg-12">
        <h2>Add a Game</h2>

        <form method="post" action="/admin/newgame" class="form-horizontal">
          <fieldset>
            <div class="form-group">
              <label for="select" class="col-lg-2 control-label">Year</label>
              <div class="col-lg-10">
                <select class="form-control" id="year" name="year">
                <%
                    var year = new Date().getFullYear(),
                        startYear = 2007;
                    while(startYear < (year + 1)) {
                %>
                    <option value="<%=startYear %>"><%=startYear %></option>
                <%
                        startYear++;
                    }
                %>
                </select>
              </div>
            </div>
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
            <script>
                jQuery("#year").val(new Date().getFullYear());
            </script>
            <div class="form-group">
              <label for="select" class="col-lg-2 control-label">Week</label>
              <div class="col-lg-10">
                <select class="form-control" name="week">
                <%
                    var week = 1;
                    while(week < 17) {
                %>
                    <option value="<%=week %>"><%=week %></option>
                <%
                        week++;
                    }
                %>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="select" class="col-lg-2 control-label">Away Team</label>
              <div class="col-lg-10">
                <select class="form-control" name="away_team">
                <%
                    teams.forEach(function(team){
                %>
                    <option value="<%=team.id %>"><%=team.owner %></option>
                <%
                    });
                %>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="away_score" class="col-lg-2 control-label">Away Score</label>
              <div class="col-lg-10">
                <input type="text" class="form-control" id="away_score" name="away_score" placeholder="Away Score">
              </div>
            </div>
            <div class="form-group">
              <label for="home_team" class="col-lg-2 control-label">Home Team</label>
              <div class="col-lg-10">
                <select class="form-control" name="home_team" id="home_team">
                <%
                    teams.forEach(function(team){
                %>
                    <option value="<%=team.id %>"><%=team.owner %></option>
                <%
                    });
                %>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label for="home_score" class="col-lg-2 control-label">Home Score</label>
              <div class="col-lg-10">
                <input type="text" class="form-control" id="home_score" name="home_score" placeholder="Home Score">
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <button class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </fieldset>
        </form>
   </div>
</div>
<% include footer %>
