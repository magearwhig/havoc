<% include header %>
<h1>Records</h1>
<div class="row">
    <div class="col-lg-12" ng-controller="PointsCtrl">
        <h2>Games</h2>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th ng-click="sortData('teamName')">Team</th>
              <th ng-click="sortData('year')">Year</th>
              <th ng-click="sortData('week')">Week</th>
              <th ng-click="sortData('points')">Points</th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="point in points.result">
              <td>{{point.teamName}}</td>
              <td>{{point.year}}</td>
              <td>{{point.week}}</td>
              <td>{{point.points}}</td>
            </tr>
          </tbody>
        </table>
        <div class="col-md-12 text-center">
            <pagination ng-change="pageChanged()" total-items="totalItems" ng-model="currentPage" boundary-links="true" max-size="maxSize" rotate="false" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></pagination>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <h2>Best Win Percentage All Time</h2>
        <ul>
        <%
            bestwinpct.forEach(function(a){
        %>
            <li><%= a.winpct %> | <%= a.owner %> (<%=a.wins %> - <%= a.losses %>)</li>
        <%
            });
        %>
        </ul>
    </div>
    <div class="col-lg-6">
        <h2>Worst Win Percentage All Time</h2>
        <ul>
        <%
            worstwinpct.forEach(function(a){
        %>
            <li><%= a.winpct %> | <%= a.owner %> (<%=a.wins %> - <%= a.losses %>)</li>
        <%
            });
        %>
        </ul>
    </div>
</div>
<% include footer %>
